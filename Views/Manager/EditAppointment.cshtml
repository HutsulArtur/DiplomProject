@{
    ViewData["Title"] = "Редагування";
    Layout = "/Views/Shared/_LayoutManager.cshtml";
}
@model Appointment
<h1>@ViewData["Title"]</h1>

<h2>Редагувати запис</h2>
<form method='post' action="SaveEditedApp">
    <input type="hidden" name="id" value="@Model.Id" /></br>
    <div class="form-group">
        Дата     
        <input type="text" id="date1" name="date" value="@Model.Date" />
    </div>
    <div class="form-group">
        <label for="select-input2">Змінити час запису</label>
    </div>
    <div class="form-group">
        <select name="time" style="width:400px" id="select-input2" class="form-control">
            <option selected value=@Model.Time>@Model.Time</option>
            <option value="10:00">10:00</option>
            <option value="10:10">10:10</option>
            <option value="15:30">15:30</option>
            <option value="15:40">15:40</option>
            <option value="15:50">15:50</option>
            <option value="16:00">16:00</option>
        </select>
    </div>
    <div class="form-group" id="select-input" class="form-control">
        <label for="select-input">Лікар:</label>
        <select name="doctor">
        @foreach (var item in @ViewBag.Docs)
        {
            @if (@Model?.Doctor?.Name == @item.Name)
            {
                <option selected value="@item.Name">@item.Name</option>
            }
            else
            {
                <option value="@item.Name">@item.Name</option>
            }
        }
        </select>
    </div>
    <div class="form-group">
        <label for="select-input">Операція:</label>
        <select name="operation" id="select-input" class="form-control">
            @foreach (var item in @ViewBag.Opers)
            {
                @if (@Model?.Operation?.Name == item.Name)
                {
                    <option selected value="@item.Name">@item.Name</option>
                }
                else
                {
                    <option value="@item.Name">@item.Name</option>
                }
            }
        </select>
    </div>
    <div class="form-group">
        <label for="select-input">Кабінет:</label>
        <select name="cabinet" id="select-input" class="form-control">
            @if (@Model?.Cabinet == null)
            {
                <option selected value="">Виберіть</option>
            }
            @foreach (var item in @ViewBag.Cabs)
            {
                @if (@Model?.Cabinet?.Name == item.Name)
                {
                    <option selected value="@item.Name">@item.Name</option>
                }
                else
                {
                    <option value="@item.Name">@item.Name</option>
                }
            }
        </select>
    </div>
    <div class="form-group">
        <label for="text-input">Пацієнт:</label>
        <input type="text" readonly name="patient" value='@Model?.Patient?.Name' style="width:400px" id="text-input" class="form-control" /></br>
    </div>
    <div class="form-group">
        <input type='submit' value='Змінити' class="btn-submit" />
    </div>
</form>

