@{
    ViewData["Title"] = "Зустрічі";
    Layout = "/Views/Shared/_LayoutManager.cshtml";
}
@model List<Appointment>
<h1>@ViewData["Title"]</h1>
<ul class="styled-list">
@foreach (Appointment app in Model)
{
    <li>
        @app?.Date 
        @app?.Time 
        @app?.Patient?.Name 
        @app?.Patient?.Phone
        @app?.Operation?.Name
        @app?.Operation?.Price <span> грн </span>
        @app?.Operation?.Duration <span> хв </span>
        @app?.Doctor?.Name 
        @app?.Doctor?.Phone
        @app?.Cabinet?.Name
        <a href="/Manager/EditAppointment?id=@app.Id">Редагувати</a>
        <a href="/Manager/DeleteAppointment?id=@app.Id">Видалити</a>
    </li>
    }
</ul>
<a href="/Manager/OldAppointments">Архів зустрічей</a>