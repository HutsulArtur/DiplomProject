@{
    ViewData["Title"] = "Записатись";
    Layout = "/Views/Shared/_Layout.cshtml";
}
@model List<Operation>
<h1>@ViewData["Title"]</h1>
<form method='post' action="/Home/WriteAppointment">
    <div class="form-group">
        <label for="select-input">Виберіть дію / операцію:</label>
    </div>
    <div class="form-group">
        <select name="action" style="width:400px" id="select-input" class="form-control">
            @foreach (Operation operation in Model)
            {
                <option value=@operation.Name>@operation.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="date">Дата</label>
    </div>
    <div class="form-group">
        <input type="date" style="width:400px" id="date" name="date" />
    </div>
    <div class="form-group">
        <label for="select-input2">Незайнятий час лікаря</label>
    </div>
    <div class="form-group">
    <select name="time" style="width:400px" id="select-input2" class="form-control">
            <option value=0>Виберіть дату та операцію для отримання незайнятого часу</option>
            <option value="10:00">10:00</option>
            <option value="10:10">10:10</option>
            <option value="15:30">15:30</option>
            <option value="15:40">15:40</option>
            <option value="15:50">15:50</option>
            <option value="16:00">16:00</option>
              
    </select>
    </div>
    <div class="form-group">
        <label for="text-input">Лікар:</label>
        <input type="text" readonly name="doctor" value='@ViewData["Doctor"]' style="width:400px" id="text-input" class="form-control" />
    </div>
    <div class="form-group">
        <label for="text-input">ПІБ:</label>
        <input type="text" name="name" placeholder="введіть ім'я" style="width:400px" id="text-input" class="form-control" />
    </div>
    <div class="form-group">
        <label for="text-input">Телефон:</label>
        <input type="text" name="phone" placeholder="введіть телефон" style="width:400px" id="text-input" class="form-control" />
    </div>
    <div class="form-group">
        <input type='submit' value='Записатись' class="btn-submit" />
    </div>
</form>
